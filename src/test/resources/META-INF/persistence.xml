<!-- https://jakarta.ee/xml/ns/persistence/ -->
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.2">
  <persistence-unit name="rickandmortyPU" transaction-type="RESOURCE_LOCAL">
    <description>Persistence Unit for a Physical Database</description>
    <!--    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>-->
    <!--    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>-->
    <provider>${persistence-unit.provider}</provider>
    <class>io.github.jinahya.rickandmortyapi.persistence.Character</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.Character_GenderConverter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.Character_NameAndUrl</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.Character_StatusConverter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.Character_SpeciesConverter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.Character_TypeConverter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.CharacterEpisode</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.Episode</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.EpisodeCharacter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.Location</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.Location_DimensionConverter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.Location_TypeConverter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.LocationResident</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.Episode_AirDateConverter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.converter.InstantStringConverter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.converter.LocalDateStringConverter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.converter.UrlStringConverter</class>
    <class>io.github.jinahya.rickandmortyapi.persistence.converter.UrlListStringConverter</class>
    <shared-cache-mode>NONE</shared-cache-mode>
    <validation-mode>CALLBACK</validation-mode>
    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:sqlite::resource:rickandmortyapi.db?jdbc.explicit_readonly=true"/>
      <property name="jakarta.persistence.jdbc.user" value=""/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
      <property name="jakarta.persistence.validation.mode" value="callback"/> <!-- default: auto -->
      <!-- ============================================================================================= eclipselink -->
      <property name="eclipselink.cursor.scrollable" value="true"/>
      <property name="eclipselink.cursor.scrollable.result-set-type" value="Forward"/>
      <property name="eclipselink.ddl-generation" value="none"/>
      <property name="eclipselink.logging.level.sql" value="FINE"/>
      <property name="eclipselink.logging.parameters" value="true"/>
      <!-- =============================================================================================== hibernate -->
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.hbm2ddl.auto" value="none"/>
      <property name="hibernate.highlight_sql" value="true"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.use_sql_comment" value="true"/>
      <!-- ================================================================================================= jinahya -->
      <property name="jinahya.persistence.table_catalog" value=""/>
      <property name="jinahya.persistence.table_schema" value=""/>
      <property name="jinahya.persistence.table_types" value=""/>
    </properties>
  </persistence-unit>
</persistence>
